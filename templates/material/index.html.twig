{% extends 'base.html.twig' %}

{% block title %}Hello MaterialController!{% endblock %}

{% block body %}


<div class="list_materials_content">
        <div class="material_array">
            <table>
                <tr>
                    <th>Elément</th>
                    <th>N° étiquette</th>
                    <th>N° de série</th>
                    <th>Disponibilité</th>
                    <th>Emprunteur</th>
                    <th>Nombre d'emprunt</th>
                    <th>Commentaire</th>
                </tr>
                {% for material in materials %}
                <tr>
                    <td>{{material.name}}</td>
                    <td>{{material.serialnumber}}</td>
                    <td>{{material.tagnumber}}</td>
                    <td>X</td>
                    <td>{{material.location}}</td>
                    <td>X</td>
                    <td>{{material.comment}}</td>
                </tr>
                {% endfor %}

            </table>
        </div>
</div>
{% endblock %}
